{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "jsx": "react",
    "declaration": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": ["dom","esnext"],
    "composite": true,
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "es"
  },
  "include": ["components"],
  "exclude": ["node_modules"]
}
